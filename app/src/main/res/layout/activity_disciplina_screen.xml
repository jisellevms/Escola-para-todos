<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisciplineScreen"
    android:background="@drawable/background">

    <include
        android:id="@+id/include2"
        layout="@layout/toolbar"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="50dp"
        android:clickable="false"
        android:backgroundTint="#e6000000"
        android:fontFamily="@font/chawp"
        android:text="@string/matematica"
        android:textSize="20sp"
        app:cornerRadius="20dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/white"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/btnLibrary"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#80c4c4c4"
        android:text="Button"
        android:textColor="@android:color/transparent"
        app:cornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSalvar" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginTop="-20dp"
        android:elevation="10dp"
        android:src="@drawable/pilha_tres_livros"
        app:layout_constraintBottom_toBottomOf="@+id/btnLibrary"
        app:layout_constraintEnd_toEndOf="@+id/btnLibrary"
        app:layout_constraintHorizontal_bias="0.358"
        app:layout_constraintStart_toStartOf="@+id/btnLibrary"
        app:layout_constraintTop_toTopOf="@+id/btnLibrary" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:fontFamily="@font/chawp"
        android:text="@string/biblioteca"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/btnLibrary"
        app:layout_constraintStart_toStartOf="@+id/btnLibrary"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btnTasks"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="#80c4c4c4"
        android:text="Button"
        android:textColor="@android:color/transparent"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSalvar" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginTop="-20dp"
        android:elevation="10dp"
        android:src="@drawable/notas_adesivas"
        app:layout_constraintBottom_toBottomOf="@+id/btnTasks"
        app:layout_constraintEnd_toEndOf="@+id/btnTasks"
        app:layout_constraintHorizontal_bias="0.358"
        app:layout_constraintStart_toStartOf="@+id/btnTasks"
        app:layout_constraintTop_toTopOf="@+id/btnTasks" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:elevation="10dp"
        android:fontFamily="@font/chawp"
        android:text="@string/atividades"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/btnTasks"
        app:layout_constraintStart_toStartOf="@+id/btnTasks"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/btnAdcArquivo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#80c4c4c4"
        android:text="Button"
        android:textColor="@android:color/transparent"
        app:cornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLibrary" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginTop="-20dp"
        android:elevation="10dp"
        android:src="@drawable/calendario"
        app:layout_constraintBottom_toBottomOf="@+id/btnAdcArquivo"
        app:layout_constraintEnd_toEndOf="@+id/btnAdcArquivo"
        app:layout_constraintHorizontal_bias="0.358"
        app:layout_constraintStart_toStartOf="@+id/btnAdcArquivo"
        app:layout_constraintTop_toTopOf="@+id/btnAdcArquivo" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:elevation="10dp"
        android:fontFamily="@font/chawp"
        android:text="@string/calendario"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/btnAdcArquivo"
        app:layout_constraintStart_toStartOf="@+id/btnAdcArquivo"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/btnLessons"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="#80c4c4c4"
        android:text="Button"
        android:textColor="@android:color/transparent"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTasks" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginTop="-20dp"
        android:elevation="10dp"
        android:src="@drawable/ensino"
        app:layout_constraintBottom_toBottomOf="@+id/btnLessons"
        app:layout_constraintEnd_toEndOf="@+id/btnLessons"
        app:layout_constraintHorizontal_bias="0.358"
        app:layout_constraintStart_toStartOf="@+id/btnLessons"
        app:layout_constraintTop_toTopOf="@+id/btnLessons" />

    <TextView
        android:id="@+id/aluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:elevation="10dp"
        android:fontFamily="@font/chawp"
        android:text="@string/aulas"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/btnLessons"
        app:layout_constraintStart_toStartOf="@+id/btnLessons"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <Button
        android:id="@+id/btnReportCard"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#80c4c4c4"
        android:text="Button"
        android:textColor="@android:color/transparent"
        app:cornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAdcArquivo" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginTop="-20dp"
        android:elevation="10dp"
        android:src="@drawable/boletim"
        app:layout_constraintBottom_toBottomOf="@+id/btnReportCard"
        app:layout_constraintEnd_toEndOf="@+id/btnReportCard"
        app:layout_constraintHorizontal_bias="0.358"
        app:layout_constraintStart_toStartOf="@+id/btnReportCard"
        app:layout_constraintTop_toTopOf="@+id/btnReportCard" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:elevation="10dp"
        android:fontFamily="@font/chawp"
        android:text="@string/boletim"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/btnReportCard"
        app:layout_constraintStart_toStartOf="@+id/btnReportCard"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <Button
        android:id="@+id/btnStudents"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="#80c4c4c4"
        android:text="Button"
        android:textColor="@android:color/transparent"
        app:cornerRadius="15dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLessons" />

    <ImageView
        android:id="@+id/imgAlunos"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginTop="-20dp"
        android:elevation="10dp"
        android:src="@drawable/alunos"
        app:layout_constraintBottom_toBottomOf="@+id/btnStudents"
        app:layout_constraintEnd_toEndOf="@+id/btnStudents"
        app:layout_constraintHorizontal_bias="0.358"
        app:layout_constraintStart_toStartOf="@+id/btnStudents"
        app:layout_constraintTop_toTopOf="@+id/btnStudents" />

    <TextView
        android:id="@+id/txtAlunos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:elevation="10dp"
        android:fontFamily="@font/chawp"
        android:text="@string/alunos"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/btnStudents"
        app:layout_constraintStart_toStartOf="@+id/btnStudents"
        app:layout_constraintTop_toBottomOf="@+id/imgAlunos" />

</androidx.constraintlayout.widget.ConstraintLayout>